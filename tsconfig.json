{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": false,
    "listFiles": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "preserveConstEnums": false,
    "strictNullChecks": true,
    "pretty": true,
    "removeComments": false,
    "target": "es6"
  },
  "include": [
    "**/*.conf.ts",
    "**/*.config.ts",
    "**/*.web.ts",
    "**/*.webpack.ts",
    "src/index.ts"
  ]
}
