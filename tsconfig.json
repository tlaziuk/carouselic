{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": false,
    "listFiles": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": false,
    "pretty": true,
    "removeComments": true,
    "target": "es5"
  },
  "files": [
    "src/index.ts",
    "test/index.ts"
  ]
}
